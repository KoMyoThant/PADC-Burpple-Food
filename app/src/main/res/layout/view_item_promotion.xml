<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="160dp"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/margin_medium_2"
    android:layout_marginLeft="@dimen/margin_medium"
    android:layout_marginTop="@dimen/margin_medium_2"
    card_view:elevation="@dimen/margin_small">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_promotion_hero_image"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:src="@drawable/img_promotion_placeholder" />

        <TextView
            android:id="@+id/tv_promotion_item_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/iv_promotion_hero_image"
            android:background="@color/accent"
            android:ellipsize="end"
            android:maxLines="1"
            android:paddingBottom="2dp"
            android:paddingLeft="@dimen/margin_card_medium_2"
            android:paddingRight="@dimen/margin_card_medium_2"
            android:text="Wildfire Chicken &amp; Burgers"
            android:textColor="@color/white"
            android:textSize="@dimen/text_regular" />

        <TextView
            android:id="@+id/tv_promotion_item_location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_promotion_item_name"
            android:background="@color/accent"
            android:ellipsize="end"
            android:maxLines="1"
            android:paddingBottom="@dimen/margin_card_medium"
            android:paddingLeft="@dimen/margin_card_medium_2"
            android:paddingRight="@dimen/margin_card_medium_2"
            android:text="Kent Ridge"
            android:textColor="@color/white"
            android:textSize="@dimen/text_smaller" />
    </RelativeLayout>
</android.support.v7.widget.CardView>